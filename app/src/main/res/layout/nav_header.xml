<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
         android:layout_height="@dimen/dp_176"
         android:background="@color/colorPrimary"
         android:padding="@dimen/dp_16"
         android:theme="@style/ThemeOverlay.AppCompat.Dark"
>

    <ImageView
            android:id="@+id/image_view_header_avatar"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/text_view_header_username"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_android_black_24dp"
            tools:ignore="VectorDrawableCompat"/>

    <TextView
            android:id="@+id/text_view_header_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="@dimen/dp_8"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toTopOf="@+id/text_view_header_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:id="@+id/text_view_header_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

</android.support.constraint.ConstraintLayout>